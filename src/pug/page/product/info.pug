.product-info
	.product-info__header
		h1.title-page Беговел Puky Pukylino
		img.product-info__logo(src="static/img/brands/puky.png", alt="лого продукта")
	.product-info__body
		.product-info__row
			.product-rating
				.product-rating__stars
					+icon('star','product-rating__icon product-rating__icon--active')
					+icon('star','product-rating__icon product-rating__icon--active')
					+icon('star','product-rating__icon product-rating__icon--active')
					+icon('star','product-rating__icon product-rating__icon--active')
					+icon('star','product-rating__icon product-rating__icon')
				a(href="").product-info__link 3 отзыва
			.product-info__articul
				span.product__text Артикул: <b>3015</b>
		.product-info__row
			.product-color
				span.product__text Выберите-цвет:
				ul.color-list
					each color in ["ff5ec9","7ed321","f5a623"]
						if (color === "ffffff")
							li.color-list__item.color-list__item--white(style=`background-color:#${color}`)
						else
							li.color-list__item(style=`background-color:#${color}`)
			.product-available
				span.product__text Наличие:
				.product-available-view
					each i in [1,2,3,4,5]
						.product-available-view__item
		.product-info__row
			.product-price
				span.product-price__old 4 9900 руб.
				span.product-price__current 3 990 руб.
				a(href="").product-info__link Нашли дешевле?
			.product-actions
				button.btn.btn--bg-orange.btn--big Купить
				button.btn.btn--transparent-grey.btn--big.btn--white-space Купить в 1 клик
	.product-info__footer
		.product-info-advantage
			.product-info-advantage__header
				+icon('wallet','product-info-advantage__icon')
				span.product-info-advantage__title Оплата
			.product-info-advantage__body
				ul.product-list.product-list--advantage
					each item in ['Наличные','Электронные деньги','Сбербанк','Безналичная оплата']
						li.product-list__item=item
		.product-info-advantage
			.product-info-advantage__header
				+icon('fast-delivery','product-info-advantage__icon')
				span.product-info-advantage__title Доставка
			.product-info-advantage__body
				p.product__text По Москве сегодня курьером - <b>бесплатно</b>  
				p.product__text Самовывоз с нашего магазина - <b>бесплатно</b>  
		.product-info-advantage
			.product-info-advantage__header
				+icon('map','product-info-advantage__icon')
				span.product-info-advantage__title Самовывоз
			.product-info-advantage__body
				p.product__text г. Москва, проспект Андропова, д. 11, к. 2, павильен № 1/2
				a(href="").product-info__link Яндекс карты
		