section.s-banner
	.container
		.banner
			.banner__navigation.banner__navigation--prev
				+icon('left-arrow', 'banner__navigation-icon')
			.banner__navigation.banner__navigation--next
				+icon('right-arrow', 'banner__navigation-icon')
			.banner__dots
			.js-banner
				.banner__item
					.banner__content
						.banner__body
							.banner__title Беговелы
							.banner__descr Отличный подарок для детей от 1 года
							a(href="#").btn.btn--border-white.btn--color-white.btn--transparent.btn--round.btn--inline
								|Выбрать
						.banner__img-wrapper
							img(src="static/img/banner.png", alt="banner").banner__img
				.banner__item
					.banner__content
						.banner__body
							span.banner__title Беговелы
							span.banner__descr Отличный подарок для детей от 1 года
							a.btn.btn--border-white.btn--color-white.btn--transparent.btn--round.btn--inline(href="#") Выбрать
							
						.banner__img-wrapper
							img(src="static/img/banner.png", alt="banner").banner__img