mixin footerNavLink(link,text)
	li.footer-nav__item
		a(href=link).footer-nav__link=text

footer.footer
	.footer__main
		.container
			.footer__navigation
				.footer__item
					ul.footer-nav
						+footerNavLink('','Самокаты')
						+footerNavLink('','Беговелы')
						+footerNavLink('','Велосипеды')
						+footerNavLink('','Роликовые коньки')
						+footerNavLink('','Скейты')
						+footerNavLink('','Батуты')
						+footerNavLink('','Детский спорт и отдых')
						+footerNavLink('','Аксессуары и запчасти')
				.footer__item
					ul.footer-nav
						+footerNavLink('static-page.html','О компании')
						+footerNavLink('static-page.html','Доставка')
						+footerNavLink('static-page.html','Оплата')
						+footerNavLink('static-page.html','Поставщикам')
						+footerNavLink('static-page.html','Новости')
						+footerNavLink('static-page.html','Отзывы')
				.footer__item.footer__item--wide
					ul.footer-nav
						+footerNavLink('','Контакты')
						+footerNavLink('','Вопросы и ответы')
						+footerNavLink('','Карта сайта')
					span.footer__address Москва, проспект Андропова, д. 11, к. 2, павильон №1/2
			.footer__contacts
				.footer__phones
					a(href="tel:88007077518").footer__phone 8 (800) 707-75-18
					span.footer__text Звонок бесплатный
					span.footer__text +7 (495) 120-30-34
				a(href="mailto:sale@baby-toys.ru").footer__mail sale@baby-toys.ru
			.footer__contacts-mobile
				.footer__item
					a(href="tel:88007077518").footer__phone 8 (800) 707-75-18
					span.footer__text Звонок бесплатный
				.footer__item
					span.footer__text +7 (495) 120-30-34
					a(href="mailto:sale@baby-toys.ru").footer__mail sale@baby-toys.ru
				.footer__item.footer__item--full
					.yandex-market
						img(src="static/img/yandex.svg", alt="Иконка яндекс маркета").yandex-market__img
